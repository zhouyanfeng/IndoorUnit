<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginBottom="10dp"
    android:background="@color/white"
    android:padding="10dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="title"
        android:textSize="25sp"
        android:textColor="@color/black"
        android:id="@+id/tv_content"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="msg"
        android:textColor="#4d4a4a"
        android:textSize="24sp"
        android:id="@+id/tv_msg"
        android:layout_marginTop="10dp"
        />

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@mipmap/img_time"
        android:drawablePadding="2dp"
        android:text="2018003859"
        android:layout_marginTop="20dp"
        android:textSize="22sp"
        android:gravity="center"
        android:textColor="#8f8f8e"
        android:layout_alignParentLeft="true"
        android:layout_centerInParent="true"
        />
    <TextView
        android:id="@+id/handler_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:text="未处理"
        android:textColor="@color/black"
        android:textSize="22sp"
        android:drawableLeft="@mipmap/statue"
        android:drawablePadding="2dp"
        android:gravity="center"
        android:layout_centerInParent="true"/>
</RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/ll_img_container"
        android:layout_marginTop="10dp"></LinearLayout>

</LinearLayout>